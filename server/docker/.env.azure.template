# FitUp Azure Environment Configuration
# Copy this file to .env.azure and fill in your actual values

# Public Configuration
PUBLIC_HOST=your-domain.com
CORS_ORIGINS=https://your-domain.com,https://your-mobile-app.com

# Database Configuration
POSTGRES_DB=fitup
POSTGRES_USER=fitup
POSTGRES_PASSWORD=your-secure-database-password
DATABASE_URL=postgres://fitup:your-secure-database-password@postgres:5432/fitup?sslmode=require

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_EXP=86400
REFRESH_TOKEN_EXP=2592000

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/api/auth/google/callback

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=https://your-domain.com/api/auth/github/callback

# Logging
LOG_LEVEL=info

# Additional Azure-specific configurations
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group-name
AZURE_LOCATION=eastus