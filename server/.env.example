# Sample Environment Configuration for Fit-Up Server
# Copy this file to .env and configure with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgres://fitup:fitup_password@localhost:5432/fitup?sslmode=disable

# Database Connection Pool Settings (Optional)
DB_MAX_CONNECTIONS=30
DB_MIN_CONNECTIONS=5
DB_MAX_CONN_LIFETIME=60        # minutes
DB_MAX_CONN_IDLE_TIME=30       # minutes
DB_HEALTH_CHECK_PERIOD=5       # minutes
DB_CONNECT_TIMEOUT=10          # seconds

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8080
PUBLIC_HOST=http://localhost

# =============================================================================
# JWT/AUTH CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-at-least-32-chars
JWT_EXP=604800                 # 7 days in seconds
REFRESH_TOKEN_EXP=2592000      # 30 days in seconds

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:19006  # React Native Metro bundler

# =============================================================================
# EMAIL CONFIGURATION (Optional - for password reset)
# =============================================================================
RESEND_API_KEY=your-resend-api-key-here

# =============================================================================
# OAUTH2 CONFIGURATION (Optional)
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/api/v1/auth/oauth/callback/google

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8080/api/v1/auth/oauth/callback/github

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret
FACEBOOK_REDIRECT_URI=http://localhost:8080/api/v1/auth/oauth/callback/facebook

# OAuth State Secret (for CSRF protection)
OAUTH_STATE_SECRET=your-random-state-secret-key

# =============================================================================
# CORS CONFIGURATION (Optional)
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:8081
